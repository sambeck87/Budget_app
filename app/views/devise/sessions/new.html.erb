<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br>
  <div class="field max_width">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"max_width fields" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"max_width fields" %>
  </div><br>

  <div class="max_width d-flex justify-content-around">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
  <div class="actions d-flex justify-content-around my-4">
    <%= f.submit "Log in" %>
  </div>
<% end %>
